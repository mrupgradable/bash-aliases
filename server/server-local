# servers: local

# operate up/down 
alias octal.cluster.down="cd ~/bash-scripts/server && ./octal.cluster.down.sh"
alias octal.cluster.up="cd ~/bash-scripts/server && ./octal.cluster.up.sh"

# octal operator
alias ping.octal-operator='ping operator.octal.castlenet.local'
alias ssh.octal-operator='ssh ubuntu@operator.octal.castlenet.local'

# octal master
alias ping.octal-master='ping master.octal.castlenet.local'
alias ssh.octal-master='ssh ubuntu@master.octal.castlenet.local'

# octal worker 01
alias ping.octal-worker-01='ping worker-01.octal.castlenet.local'
alias ssh.octal-worker-01='ssh ubuntu@worker-01.octal.castlenet.local'

# octal worker 02
alias ping.octal-worker-02='ping worker-02.octal.castlenet.local'
alias ssh.octal-worker-02='ssh ubuntu@worker-02.octal.castlenet.local'
